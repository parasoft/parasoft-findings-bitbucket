{
  "name": "parasoft-findings-bitbucket",
  "version": "1.0.0",
  "description": "A CLI tool to read Parasoft static analysis reports and upload results to Bitbucket.",
  "main": "lib/main.js",
  "files": [
    "dist"
  ],
  "bin": {
    "parasoft-findings-bitbucket": "./dist/index.js"
  },
  "scripts": {
    "postbuild": "node ./scripts/prepend.mjs",
    "compile": "npx tsc -p ./",
    "watch": "npx tsc -watch -p ./",
    "lint": "npx eslint . --ext .ts -f checkstyle -o eslint/eslint-report.xml || true",
    "test": "nyc mocha",
    "package": "ncc build --license licenses.txt",
    "clean": "rimraf ./dist ./lib ./eslint ./coverage ./.nyc_output test-results.xml",
    "all": "npm run clean && npm run compile && npm run lint && npm run test && npm run package && npm run postbuild"
  },
  "nyc": {
    "reporter": [
      "html",
      "cobertura"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parasoft/parasoft-findings-bitbucket"
  },
  "author": "Parasoft Corp.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/parasoft/parasoft-findings-bitbucket/issues"
  },
  "homepage": "https://github.com/parasoft/parasoft-findings-bitbucket#readme",
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "fs-extra": "^11.3.0",
    "mocha": "^10.3.0",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2"
  }
}
